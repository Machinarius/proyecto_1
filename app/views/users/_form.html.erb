<%= form_with(model: user, local: true) do |form| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="field">
      <%= form.label :name %>
      <%= form.text_field :name, id: :user_name, class: 'form-control'  %>
    </div>

    <div class="field">
      <%= form.label :email %>
      <%= form.email_field :email, id: :user_email, class: 'form-control'  %>
    </div>

    <div class="field">
      <%= form.label :password %>
      <%= form.password_field :password_digest, id: :user_password_digest, class: 'form-control' %>
    </div>

    <div class="field">
      <%= form.label :password_confirmation, "Password Confirmation" %>
      <%= form.password_field :password_confirmation, id: :user_password_digest, class: 'form-control' %>
    </div>

    <div class="actions">
      <%= form.submit "Create my account", class: "btn btn-primary"%>
    </div>
  </div>
</div>
<% end %>
